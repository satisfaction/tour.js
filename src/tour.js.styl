$white = white;
$opacity = 0.8;

#tourjs-overlay,
.tourjs-step {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

#tourjs-overlay {
  z-index: 9999;
}

#tourjs-close {
  cursor: pointer;
  height: 26px;
  opacity: 0.8;
  position: fixed;
  right: 20px;
  top: 20px;
  width: 26px;
  z-index: 999999;
}

.tourjs {
  -webkit-font-smoothing: antialiased;
  -webkit-text-shadow: rgba(0,0,0,.01) 0 0 1px;
  text-shadow: rgba(0,0,0,.01) 0 0 1px;
  box-sizing: content-box;
}

.tourjs-step { z-index: 99999; }

.tourjs-hint { position: absolute; }

.tourjs-highlight { z-index: 9999999 !important; }

.tourjs-silence { opacity: 0 !important; }

.tourjs-tooltip {
  color: $white;
  line-height: 1.3em;
  padding: 5px;
}

.tourjs-tooltip h2 {
  line-height: 1.3em;
  font-size: 24px;
  margin: 0;
  margin-bottom: 5px;
  padding: 0;
}

.tourjs-tooltip .tourjs-desc { font-size: 16px; }

.tourjs-overview-title,
.tourjs-overview-description,
.tourjs-overview-description *,
.tourjs-tooltip h2,
.tourjs-tooltip .tourjs-description {
  font-family: Arial, Helvetica, sans-serif;
  font-weight: normal;

  // Font smoothing
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.tourjs-overview-description,
.tourjs-overview-description *,
.tourjs-tooltip .tourjs-description { font-size: 16px; }

.tourjs-hint {
