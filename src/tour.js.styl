.tourjs-pagination {
  position: fixed;
  right: 0;
  bottom: 40px;
  left: 0;
  height: 40px;
  z-index: 9999999;

  .tourjs-pagination-wrapper {
    margin: 0 auto;
    position: relative;
    text-align: center;
    width: 200px;
  }

  .tourjs-next-step,
  .tourjs-previous-step {
    background-color: white;
    cursor: pointer;
    height: 30px;
    line-height: 34px;
    opacity: 0.8;
    padding-top: 2px;
    position: absolute;
    width: 32px;
    box-shadow: 1px 1px 2px rgba(0,0,0,0.5);

    svg {
      height: 16px;
      width: 16px;

      path { fill: rgba(0,0,0,0.5); }
    }

    &.tourjs-step-disabled {
      cursor: default;
      opacity: 0.2;
      svg path { fill: rgba(0,0,0,0.3); }
    }
  }

  .tourjs-previous-step {
    border-radius: 2px 0 0 2px;
    position: absolute;
    top: 0;
    left: 0;
  }

  .tourjs-next-step {
    border-radius: 0 2px 2px 0;
    padding-left: 2px;
    position: absolute;
    top: 0;
    right: 0;
  }

  .tourjs-step-count {
    color: white;
    font-size: 20px;
    line-height: 32px;
    text-align: center;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    width: 140px;

    position: absolute;
    top: 0;
    left: 31px;
  }
}

.tourjs-overview {
  color: $white;
  max-width: 400px;
  position: absolute;

  .tourjs-overview-title,
  .tourjs-overview-description {
    font-weight: normal;
    line-height: 1.3em;
    text-align: center;
  }

  .tourjs-overview-title {
    font-size: 32px;
    margin: 0;
  }
}

.tourjs-overview-line {
  padding-bottom: 10px;

  svg { width: 100%; }
}
